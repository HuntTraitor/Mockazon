{
  "name": "mockazon-product-microservice",
  "version": "1.0.0",
  "description": "Micro Service responsible for all things authentication",
  "author": "Lukas Teixeira Doepcke <lteixeir@ucsc.edu>, Evan Metcalf <evmetcal@ucsc.edu>, Eesha Krishnamagaru <elkrishn@ucsc.edu>, Hunter Tratar <htratar@ucsc.edu>, Trevor Ryles <tryles@ucsc.edu>",
  "license": "TBD (FIXME: MIT maybe)",
  "repository": "https://github.com/ekrishnamagaru/Mockazon",
  "devDependencies": {
    "@types/bcrypt": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/jest": "*",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/pg": "*",
    "@types/supertest": "*",
    "@types/swagger-ui-express": "*",
    "bestzip": "*",
    "concurrently": "*",
    "eslint": "*",
    "eslint-config-typescript": "*",
    "jest": "*",
    "joi": "*",
    "nodemon": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "ts-postgres": "*",
    "typescript": "*"
  },
  "dependencies": {
    "cors": "*",
    "dotenv": "^16.4.5",
    "express": "*",
    "jsonwebtoken": "*",
    "pg": "*",
    "swagger-ui-express": "*",
    "tsoa": "^6.2.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 2000,
    "collectCoverageFrom": [
      "src/**/**.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "src/server.[jt]s",
      "index.d.ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ]
  },
  "eslintConfig": {
    "extends": [
      "typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 14
    },
    "noInlineConfig": true,
    "rules": {
      "indent": [
        "warn",
        2
      ]
    }
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node build/src/server.js",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "predev": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "swagger": "tsoa spec-and-routes",
    "pretest": "npm run swagger",
    "test": "jest --runInBand --coverage --verbose --forceExit",
    "lint": "eslint test/**/*.[jt]s src/**/*.[jt]s --fix"
  }
}

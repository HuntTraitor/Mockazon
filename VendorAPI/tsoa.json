{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*[cC]ontroller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "schemes": [ "http" ],
    "basePath": "/api/v0",
    "securityDefinitions": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "name": "X-API-KEY",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./src/auth/expressAuth.ts"
  }
}

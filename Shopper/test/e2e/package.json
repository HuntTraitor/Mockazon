{
  "name": "mockazon-shopper-app-e2e-testing",
  "version": "1.0.0",
  "description": "End-to-end tests for the Mockazon Shopper App",
  "author": "Lukas Teixeira Doepcke <lteixeir@ucsc.edu>, Evan Metcalf <evmetcal@ucsc.edu>, Eesha Krishnamagaru <elkrishn@ucsc.edu>, Hunter Tratar <htratar@ucsc.edu>, Trevor Ryles <tryles@ucsc.edu>",
  "license": "TBD (FIXME: MIT maybe)",
  "repository": "https://github.com/ekrishnamagaru/Mockazon",
  "devDependencies": {
    "dotenv": "*",
    "eslint": "*",
    "eslint-config-google": "*",
    "express": "*",
    "jest": "*",
    "puppeteer": "*",
    "puppeteer-core": "*",
    "supertest": "*"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 14
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    }
  },
  "scripts": {
    "build": "cd ../.. && npm run build",
    "e2e": "jest --testTimeout=10000 --runInBand --verbose --forceExit --detectOpenHandles",
    "test": "(npm run build) && (npm run e2e)",
    "lint": "eslint tests --no-inline-config --max-warnings 0 --ext .js"
  }
}
